<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN"/>
        </intent>
    </queries>

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS"/>
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES"/>
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY"/>
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR"/>
    <uses-permission android:name="android.permission.BIND_APPWIDGET"/>

    <application
        android:name=".ui.IonLauncherApp"
        android:icon="@mipmap/ic_ion"
        android:roundIcon="@mipmap/ic_ion"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="33">

        <service
            android:name=".provider.notification.NotificationService"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <activity
            android:name=".ui.HomeScreen"
            android:theme="@style/IonLauncher"
            android:clearTaskOnLaunch="true"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:allowEmbedded="false"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="keyboard|keyboardHidden"
            android:enabled="false"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.extra.WallpaperApplicationActivity"
            android:label="@string/wallpaper"
            android:theme="@style/IonLauncher.Settings"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.ATTACH_DATA"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.ALTERNATIVE"/>
                <data android:mimeType="image/*"/>
                <data android:scheme="content"/>
                <data android:scheme="file"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.settings.SettingsActivity"
            android:theme="@style/IonLauncher.Settings"
            android:label="@string/tweaks"
            android:launchMode="singleInstancePerTask"
            android:enabled="false"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.APPLICATION_PREFERENCES"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.settings.LookAndFeelActivity"
            android:theme="@style/IonLauncher.Settings"/>

        <activity
            android:name=".ui.settings.SuggestionsActivity"
            android:theme="@style/IonLauncher.Settings"/>

        <activity
            android:name=".ui.settings.iconPackPicker.IconPackPickerActivity"
            android:theme="@style/IonLauncher.Settings"
            android:exported="true"/>

        <activity
            android:name=".ui.settings.suggestions.SuggestionsActivity"
            android:theme="@style/IonLauncher.Settings"/>

        <activity
            android:name=".ui.settings.widgets.WidgetChooserActivity"
            android:theme="@style/IonLauncher.Settings"/>

        <activity
            android:name=".ui.settings.SetupActivity"
            android:theme="@style/IonLauncher.Settings"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.settings.FakeLauncherActivity"
            android:enabled="false"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".util.CrashActivity"
            android:theme="@style/IonLauncher.Settings"/>
    </application>
</manifest>